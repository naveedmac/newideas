<!DOCTYPE html>
<html>
<head>
  <title>Ideas</title>
  <%= csrf_meta_tags %>
  <script language="JavaScript" type="text/javascript">

  ////////////////
  function Tog(ideaId){
    var expandable = document.getElementById(ideaId)
    if(expandable.className === 'hidden'){
      expandable.classList.remove('hidden')
      expandable.classList.add('show')}
      else {
        expandable.classList.remove('show')
        expandable.classList.add('hidden')
      }



    }


    </script>


    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <br>
    <div id="main-container" class="container">
      <div class="row">
        <div class="col-9"><div class="center">



<%= link_to image_tag("crappy-idea.jpg",size: "60", alt: "logo"), root_path, class: 'navbar-brand' %>
</div>
        <div class="row">


          <%= link_to 'Idea Factory', ideas_path %>
</div>

        </div>
        <div class="col-3">
          <div class="row text-right">
            <div class='col'>
              <% if user_signed_in? %>
              Hello, <%= current_user.first_name %> <%= current_user.last_name %>
              &nbsp;|&nbsp;
              <%= link_to 'Sign Out', session_path, method: :delete %>
              <% else %>
              <%= link_to 'Sign Up', new_user_path %>
              &nbsp;|&nbsp;
              <%= link_to 'Sign In', new_session_path %>
              <% end %>
            </div>
          </div>
          <div class="row">
            <div class='col text-right'>
              <br>
              <button type="button" class="btn btn-outline-primary"><%= link_to 'New Idea', new_idea_path %></button>
            </div>
          </div>

        </div>
      </div>
      <div class="row">
        <div class="container-fluid">

          <% if flash[:notice].present? %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <%= flash[:notice] %>
          </div>
          <% end %>

          <% if flash[:alert].present? %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <%= flash[:alert] %>
          </div>
          <% end %>
        </div>
      </div>


      <%= yield %>
    </div>
  </body>
  </html>
